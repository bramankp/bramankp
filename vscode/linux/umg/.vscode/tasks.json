{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "rm --recursive --force build package",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "configure release",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "cmake -Bbuild -GNinja",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "configure testing",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "cmake -Bbuild -GNinja -DUTBUILD=ON",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "execute testing",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "build/test/apptest",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "deploy",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "sshpass -pmandrake scp -r package/UMG/ root@192.168.0.1:/opt/",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ]
}
