{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "shell": {
            "executable": "cmd.exe",
            "args": [
                "/d",
                "/c"
            ]
        }
    },
    "tasks": [
        {
            "label": "Configure Release",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "build\\configure-release.cmd",
            "args": [
                "666",
                "1"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure Testing",
            "type": "shell",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "build\\configure-testing.cmd",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Release",
            "type": "process",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "mingw32-make",
            "options": {
                "cwd": "${workspaceRoot}/build-release"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Testing",
            "type": "process",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "mingw32-make",
            "options": {
                "cwd": "${workspaceRoot}/build-testing"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash Target",
            "type": "process",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "C:\\Program Files (x86)\\SEGGER\\JLink_V642f\\JFlash.exe",
            "args": [
                "-openprjbuild\\nexa.jflash",
                "-openbuild-release\\nexa.bin,0x400000",
                "-auto",
                "-exit"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "Execute Tests",
            "type": "process",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "command": "runalltests.exe",
            "options": {
                "cwd": "${workspaceRoot}/build-testing"
            },
            "problemMatcher": []
        }
    ]
}
